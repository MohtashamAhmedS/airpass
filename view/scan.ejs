  <body class="background">
    <div class="container con d-flex justify-content-center align-items-center">
      <div class="con-1">
        <img src="images/logo.png" class="webisteLogo" alt="logo" />
        <img src="images/BG.png" class="logo" alt="logo" />
        <div class="con-1-main">
          <h1 class="con-1-text con-1-text1">
            Please Re-enter QRcode information because once created informaiton
            cannot be change‚Äù
          </h1>
        </div>
      </div>

      <div class="container con-2">
        <form action="/scan" method="POST" class="form">
          <div class="mb-3 inner-form">
            <div class="text">
              <img src="images/logoR.png" alt="" />
            </div>
            <div class="input">
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="firstname"
                placeholder="Full Name"
                required
              />
            </div>
            <div class="input">
              <input
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                name="email"
                required
                placeholder="Email"
              />
            </div>
            <div class="input">
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="phone"
                required
                placeholder="Phone Number"
              />
            </div>
            <div class="input">
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="flightnumber"
                required
                placeholder="flight Number"
              />
            </div>
            <div class="input">
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="airportodepart"
                required
                placeholder="Departure"
              />
            </div>
            <div class="input">
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="airportoarrival"
                required
                placeholder="Arrival"
              />
            </div>
            <div>
              <button class="btn btn-light mt-3 qrbutton" type="submit">
                Generate Qrcode
              </button>
            </div>
          </div>
        </form>
